-- Scripts:

Main.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		Draggable = true
		DragMousePosition = Vector2.new(input.Position.X, input.Position.Y)
		FramePosition = Vector2.new(Main.Position.X.Scale, Main.Position.Y.Scale)
	end
end)

Main.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		Draggable = false
	end
end)

UserInputServices.InputChanged:Connect(function(input)
	if Draggable == true then
		local NewPosition = FramePosition + ((Vector2.new(input.Position.X, input.Position.Y) - DragMousePosition) / Camera.ViewportSize)
		Main.Position = UDim2.new(NewPosition.X, 0, NewPosition.Y, 0)
	end
end)

local function PFFPJ_fake_script() -- DestroyButton.LocalScript 
	local script = Instance.new('LocalScript', DestroyButton)

	script.Parent.MouseButton1Click:Connect(function()
		script.Parent.Parent.Parent:Destroy()
	end)
end
coroutine.wrap(PFFPJ_fake_script)()
wait(10)
while true do
	Sherrif.Text = "Sherrif : "..Stats.Sherrif
	Murder.Text = "Murder : "..Stats.Murder
	Map.Text = "Map : "..Stats.Map
end
